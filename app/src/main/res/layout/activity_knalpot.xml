<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="knalpot"
    android:background="@drawable/biru">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/knalpot"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingStart="10dp"
        android:src="@drawable/part4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_below="@+id/knalpot"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knalpot bobokan"
            android:textSize="40dp"
            android:textColor="@color/abuterang"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/nama2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama"
            android:textSize="18dp"
            android:text="Knalpot bobokan adalah salah satu jenis knalpot modifikasi yang dirancang untuk meningkatkan performa mesin dan menghasilkan suara knalpot yang khas. Desainnya memungkinkan aliran gas buang lebih cepat dan efisien, yang dapat meningkatkan output daya mesin."
            android:textColor="@color/abuterang"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>


</RelativeLayout>
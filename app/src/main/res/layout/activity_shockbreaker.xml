<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shockbreaker"
    android:background="@drawable/biru">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shockbreaker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingStart="10dp"
        android:src="@drawable/part5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_below="@+id/shockbreaker"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shockbreaker"
            android:textSize="40dp"
            android:textColor="@color/abuterang"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/nama2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama"
            android:textSize="18dp"
            android:text="Shockbreaker motor, atau sering disebut juga sebagai suspensi belakang, adalah komponen kritis pada sistem suspensi sepeda motor yang bertanggung jawab untuk menyerap guncangan dan getaran dari permukaan jalan."
            android:textColor="@color/abuterang"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>


</RelativeLayout>